{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@stacklycore/ui": ["index.ts"],
      "src/*": ["src/*"],
      "animations/*": ["core/animations/*"],
      "animations": ["core/animations/index.ts"],
      "components/*": ["core/components/*"],
      "components": ["core/components/index.ts"],
      "atoms/*": ["core/components/atoms/*"],
      "atoms": ["core/components/atoms/index.ts"],
      "molecules/*": ["core/components/molecules/*"],
      "molecules": ["core/components/molecules/index.ts"],
      "organisms/*": ["core/components/organisms/*"],
      "organisms": ["core/components/organisms/index.ts"],
      "css": ["core/css/index.ts"],
      "css/*": ["core/css/*"],
      "hooks/*": ["core/hooks/*"],
      "hooks": ["core/hooks/index.ts"],
      "contexts/*": ["core/contexts/*"],
      "contexts": ["core/contexts/index.ts"],
      "layouts/*": ["core/layouts/*"],
      "layouts": ["core/layouts/index.ts"],
      "styles/*": ["core/styles/*"],
      "styles": ["core/styles/index.ts"],
      "themes/*": ["core/themes/*"],
      "themes": ["core/themes/index.ts"],
      "types": ["core/types/index.ts"],
      "utils/*": ["core/utils/*"],
      "utils": ["core/utils/index.ts"],
      "core/*": ["core/*"],
      "core": ["index.ts"]
    },
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable"],
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*", "**/*.d.ts", "theme.d.ts"],
  "exclude": ["node_modules", "build"]
}
