{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@atoms/*": ["core/@atoms/*"],
      "@atoms": ["core/@atoms/index.ts"],
      "@molecules/*": ["core/@molecules/*"],
      "@molecules": ["core/@molecules/index.ts"],
      "@organisms/*": ["core/@organisms/*"],
      "@organisms": ["core/@organisms/index.ts"],
      "layouts/*": ["core/layouts/*"],
      "layouts": ["core/layouts/index.ts"],
      "jotais/*": ["core/jotai/*"],
      "jotais": ["core/jotai/index.ts"],
      "hooks/*": ["core/hooks/*"],
      "hooks": ["core/hooks/index.ts"],
      "themes/*": ["core/themes/*"],
      "themes": ["core/themes/index.ts"],
      "types": ["core/types/index.ts"],
      "css": ["core/css/index.ts"],
      "css/*": ["core/css/*"],
      "utils/*": ["core/utils/*"],
      "utils": ["core/utils/index.ts"],
      "styles/*": ["core/styles/*"],
      "styles": ["core/styles/index.ts"],
      "src/*": ["src/*"],
      "core/*": ["core/*"],
      "core": ["core/index.ts"]
    },
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable"],
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["**/*", "**/*x", "**/*.d.ts", "theme.d.ts"],
  "exclude": ["node_modules", "build", "**/*.stories.tsx", "**/*.test.tsx"]
}
